<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="200.0" prefWidth="300.0" spacing="15.0" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.Ui.MusteriSilFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Müşteri Silme İşlemi" style="-fx-font-size: 14pt; -fx-font-weight: bold;" />
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="150.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Müşteri ID:" />
                <TextField fx:id="txtSilId" promptText="Silinecek ID" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <Button mnemonicParsing="false" text="Müşteriyi Sil" onAction="#musteriyiSil" />
    </children>
</VBox>