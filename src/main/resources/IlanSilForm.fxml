<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Main.Ui.IlanSilFormController"
            stylesheets="@style.css"
            prefWidth="700" prefHeight="500">

    <top>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="İLAN SİLME EKRANI" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #D32F2F;"/>
            <Label text="Silmek istediğiniz ilanın yanındaki 'X' butonuna basınız." style="-fx-text-fill: #666;"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tabloSil" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="No" prefWidth="60"/>
                    <TableColumn fx:id="colBaslik" text="Başlık" prefWidth="250"/>
                    <TableColumn fx:id="colFiyat" text="Fiyat" prefWidth="100"/>
                    <TableColumn fx:id="colIl" text="İl" prefWidth="100"/>

                    <TableColumn fx:id="colSilButon" text="İşlem" prefWidth="80" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>