<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0"
          prefHeight="550.0" prefWidth="450.0"
          xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Main.Ui.MusteriFormController"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" prefWidth="130.0" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="280.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
    </rowConstraints>

    <children>
        <Text text="Yeni Müşteri Kayıt" GridPane.columnSpan="2" GridPane.halignment="CENTER" style="-fx-font-size: 16pt; -fx-font-weight: bold;" />

        <Label text="Kullanıcı ID:" GridPane.rowIndex="1" />
        <TextField fx:id="txtKullaniciId" promptText="Benzersiz ID" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Ad Soyad:" GridPane.rowIndex="2" />
        <TextField fx:id="txtAd" promptText="Ad ve Soyad" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="E-posta:" GridPane.rowIndex="3" />
        <TextField fx:id="txtEposta" promptText="ornek@mail.com" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Telefon:" GridPane.rowIndex="4" />
        <TextField fx:id="txtTelefon" promptText="5xx xxx xx xx" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="T.C. Kimlik:" GridPane.rowIndex="5" />
        <TextField fx:id="txtTc" promptText="11 haneli T.C." GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Emlak Tipi:" GridPane.rowIndex="6" />
        <ComboBox fx:id="cmbEmlakTipi" prefWidth="280.0" promptText="Tipi Seçiniz" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="Maks. Bütçe (₺):" GridPane.rowIndex="7" />
        <TextField fx:id="txtButce" promptText="Sadece Sayı" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label text="Min. M2 Alanı:" GridPane.rowIndex="8" />
        <TextField fx:id="txtMinM2" promptText="Sadece Sayı" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <Label text="Min. Oda Sayısı:" GridPane.rowIndex="9" />
        <TextField fx:id="txtMinOda" promptText="Örn: 2" GridPane.columnIndex="1" GridPane.rowIndex="9" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
            <children>
                <Button mnemonicParsing="false" text="Temizle" onAction="#temizleButonu" />
                <Button mnemonicParsing="false" text="Kaydet" onAction="#kaydet" />
            </children>
        </HBox>
    </children>
</GridPane>