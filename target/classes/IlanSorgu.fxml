<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Main.Ui.IlanSorguController"
            stylesheets="@style.css">

    <left>
        <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-color: #dee2e6; -fx-border-width: 0 1 0 0;" prefWidth="280">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="DETAYLI SORGULAMA" />

            <Label text="Emlak Tipi:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="cmbEmlakTipi" promptText="Tümü" maxWidth="Infinity"/>

            <Label text="Fiyat Aralığı (TL):" style="-fx-font-weight: bold;"/>
            <HBox spacing="5">
                <TextField fx:id="txtMinFiyat" promptText="Min" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="txtMaxFiyat" promptText="Max" HBox.hgrow="ALWAYS"/>
            </HBox>

            <Label text="Konum:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtIl" promptText="İl (Örn: İstanbul)" />
            <TextField fx:id="txtIlce" promptText="İlçe (Örn: Kadıköy)" />

            <Label text="Oda Sayısı:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtOda" promptText="Örn: 3" />

            <Button fx:id="btnSorgula" text="SONUÇLARI GETİR" maxWidth="Infinity" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;" />
            <Button fx:id="btnTemizle" text="Temizle" maxWidth="Infinity" style="-fx-background-color: #ff9800; -fx-text-fill: white;" />
        </VBox>
    </left>

    <center>
        <VBox style="-fx-padding: 20;">
            <Label text="Arama Sonuçları" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

            <TableView fx:id="tablo" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="No" />
                    <TableColumn fx:id="colBaslik" prefWidth="150.0" text="Başlık" />
                    <TableColumn fx:id="colFiyat" prefWidth="100.0" text="Fiyat (TL)" />
                    <TableColumn fx:id="colIl" prefWidth="100.0" text="İl" />
                    <TableColumn fx:id="colIlce" prefWidth="100.0" text="İlçe" />

                    <TableColumn fx:id="colDetay" prefWidth="250.0" text="Özellikler (m² / Oda / Kat)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>